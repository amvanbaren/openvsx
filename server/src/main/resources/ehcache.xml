<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">
    <persistence directory="${java.io.tmpdir}"/>
    <cache alias="average.review.rating">
        <expiry>
            <none/>
        </expiry>
        <resources>
            <heap>1</heap>
            <offheap unit="MB">1</offheap>
            <disk unit="MB">2</disk>
        </resources>
    </cache>
    <cache alias="namespace.details.json">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="database.search">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
        </resources>
    </cache>
    <cache alias="extension.json">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="latest.extension.version">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="buckets">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="sitemap">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1</heap>
            <offheap unit="MB">2</offheap>
            <disk unit="MB">8</disk>
        </resources>
    </cache>
    <cache alias="malicious.extensions">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap>1</heap>
            <offheap unit="MB">2</offheap>
            <disk unit="MB">8</disk>
        </resources>
    </cache>
    <cache alias="files.webresource">
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <listeners>
            <listener>
                <class>org.eclipse.openvsx.cache.ExpiredFileListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap>150</heap>
        </resources>
    </cache>
    <cache alias="files.extension">
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <listeners>
            <listener>
                <class>org.eclipse.openvsx.cache.ExpiredFileListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap>20</heap>
        </resources>
    </cache>
    <cache alias="vscode.extensionquery.ids">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
            <offheap unit="MB">32</offheap>
            <disk unit="MB">128</disk>
        </resources>
    </cache>
    <cache alias="vscode.extensionquery.results">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap>1024</heap>
            <offheap unit="MB">128</offheap>
            <disk unit="MB">512</disk>
        </resources>
    </cache>
</config>